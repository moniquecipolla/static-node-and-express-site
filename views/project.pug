extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{projects[id].project_name}

        p #{projects[id].description}

      .project-tech-links-box.box
        h6 Technologies
        ul
         each tech in projects[id].technologies //Uses the each iterator to iterate over the list of technologies.
          li= tech

        a.btn-link(href=`${projects[id].live_link}`, target="_blank") Live Demo
        a.btn-link(href=`${projects[id].github_link}`, target="_blank") GitHub Repo

    .project-img-box.box

      img.project-img(src=`${projects[id].image_urls[0]}`, alt=`Screenshot of ${projects[id].project_name} project`)
      img.project-img(src=`${projects[id].image_urls[1]}`, alt=`Screenshot of ${projects[id].project_name} project`)
      img.project-img(src=`${projects[id].image_urls[2]}`, alt=`Screenshot of ${projects[id].project_name} project`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
